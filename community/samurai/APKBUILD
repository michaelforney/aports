pkgname=samurai
pkgver=0.7.g5221d94
pkgrel=1
pkgdesc="ninja-compatible build tool written in C"
url="https://github.com/michaelforney/samurai"
arch="all"
license="Apache-2.0"
options="!check"  # No test suite.
subpackages="$pkgname-doc"
source="https://github.com/michaelforney/samurai/archive/5221d94aae5d91e162730cb05a7435c62a010efb.tar.gz"
builddir="$srcdir/$pkgname-5221d94aae5d91e162730cb05a7435c62a010efb"

build() {
	cd "$builddir"
	make
}

package() {
	cd "$builddir"
	make install PREFIX="/usr" DESTDIR="$pkgdir"
}

